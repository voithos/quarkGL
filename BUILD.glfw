# Foreign build definition for glfw.
load("@rules_foreign_cc//foreign_cc:defs.bzl", "cmake")

package(default_visibility = ["//visibility:public"])

filegroup(
    name = "all_srcs",
    srcs = glob(["**"]),
)

cmake(
    name = "glfw",
    generate_args = [
        "-DBUILD_SHARED_LIBS=ON",
    ],
    lib_source = ":all_srcs",
    out_shared_libs = ["libglfw.so.3"],
)
